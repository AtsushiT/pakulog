<%= form_for([@restaurant, @review]) do |f| %>
  <div class="form-group">
    <%= f.label :body, 'レビュー' %><br />
    <%= f.text_area :body, class: "form-control" %>
    <%= f.label :score, '星いくついただけますでしょうか？' %><br />
    <%= f.number_field :score, class: "form-control" %>
  </div>
  <%= f.submit %>
<% end %>
